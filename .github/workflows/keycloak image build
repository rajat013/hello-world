name: keycloak image build

on:
  workflow_dispatch:
    inputs:
      message:
        description: "Message from triggering workflow"
        required: true
      build_env:
        description: "Build environment (dev / stage / prod)"
        required: true

jobs:
  print-messages:
    runs-on: ubuntu-latest

    steps:
      - name: Print hello
        run: echo "Hello from workflow_dispatch ðŸš€"

      - name: Print environment info
        run: |
          echo "Runner OS: $RUNNER_OS"
          echo "GitHub Repository: $GITHUB_REPOSITORY"
          echo "Triggered by: $GITHUB_ACTOR"

      - name: Print inputs
        run: |
          echo "Message: ${{ inputs.message }}"
          echo "Build Environment: ${{ inputs.build_env }}"
